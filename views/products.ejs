<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory | My Products</title>
    <link rel="stylesheet" href="/partials/header.css">
    <link rel="stylesheet" href="/products/products.css">
    <link rel="stylesheet" href="/partials/footer.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <section id="inventorySection">
            <div class="sectionHeader">
                <h1>My Products</h1>
                <button id="addProductBtn" class="btn">Add Product</button>
            </div>

            <table id="inventoryTable">
                <thead>
                    <tr>
                        <th> </th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Retail Price (₹)</th>
                        <th>Wholesale Price (₹)</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="inventoryBody">
                    <% if (products && products.length) { %>
                        <% products.forEach((product,index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= product.product_name %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.retail_price %></td>
                                <td><%= product.wholesale_price %></td>
                                <td><%= product.category %></td>
                                <td>
                                    <button class="btn editBtn">Edit</button>
                                    <button class="btn btnSecondary" onclick="deleteProduct(`<%= product.product_id %>`,event)">Delete</button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr><td colspan="7">No Products to Display</td></tr>
                    <% } %>
                </tbody>
            </table>
        </section>
    </div>

    <!-- Popup Modal for Add/Edit Product -->
    <div id="addProductOverlay" class="hidden">
        <div class="popup">
            <h2 id="formTitle">Add Product</h2>
            <form id="itemForm">
                <label for="itemName">Item Name:</label>
                <input type="text" id="itemName" required>

                <label for="itemQuantity">Quantity:</label>
                <input type="number" id="itemQuantity" min="1" required>

                <label for="itemRetailPrice">Retail Price (₹):</label>
                <input type="number" id="itemRetailPrice" step="0.01" min="0" required>

                <label for="itemWholesalePrice">Wholesale Price (₹):</label>
                <input type="number" id="itemWholesalePrice" step="0.01" min="0" required>

                <label for="itemCategory">Category:</label>
                <select id="itemCategory" required>
                    <option value="">Select Category</option>
                    <option value="Laptop">Laptop</option>
                    <option value="Phone">Phone</option>
                    <option value="Tablet">Tablet</option>
                    <option value="Accessory">Accessory</option>
                    <option value="Other">Other</option>
                </select>

                <div class="formButtons">
                    <button type="submit" id="addBtn" class="btn">Add</button>
                    <button type="button" id="cancelBtn" class="btn btnSecondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('partials/footer') %>

    <script src="/products/products.js"></script>
</body>
</html>
